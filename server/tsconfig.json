{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "skipLibCheck": true,
      "allowJs": true,
      "checkJs": false,
      "noEmit": true              // ← THÊM DÒNG NÀY để không tạo output files
    },
    "include": [
      "./**/*.js",
      "./routes/**/*", 
      "./controllers/**/*", 
      "./middleware/**/*",
      "./services/**/*",
      "./config/**/*",
      "./utils/**/*"
    ],
    "exclude": ["node_modules", "**/node_modules/**", "prisma/**/*", "tools/**/*"]
}